<%= @party.name %> <br>
<%= @party.theme.name %> <br>
<%= @party.capacity %> <br>


<ul class = "guest_list">
<% if !@party.guests.blank? %>
<% @party.guests.each do |guest|%>
    <li> <%=guest.name %> </li>
  <% end %>
  <% else %>
    There is currently nobody attending.
<% end %>
</ul>



  <%= form_for Rsvp.new , method: :post, url: party_path(@party) do |f| %>
    <%= f.hidden_field :party_id, value: @party.id %>
    #in controller do current_user.rsvp.build - or pass current user from rsvps 
    <%= f.submit " RSVP" %>
    <% end %>

    <% if current_user.type == "Guest" %>
    Would you like to attend this party?
    <% end %>