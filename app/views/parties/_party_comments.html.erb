<div class= "party_comments">
<ul class= "list_of_comments">  
<% party.comments.each do |comment| %>
    <li><%= comment.user.name %>: 
    <%= comment.content %> </li> 
      <% if current_user == comment.user %>
        <%= link_to "Edit your post", edit_party_comment_path(party, comment) %>
        <br><br>
        <% end %>
  <%end%>

</ul>

<%= form_for Comment.new do |f| %>
  <%= f.label "Write your comment here:" %>
  <%= f.text_area :content %>
  <%= f.hidden_field :party_id, value: @party.id %>
  <%= f.submit %>
<% end %>

</div>